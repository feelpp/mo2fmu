[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    .venv-mo2fmu,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    node_modules
max-complexity = 30
docstring-convention = google
per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103
